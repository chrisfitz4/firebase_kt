<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        tools:text="Hey, how's it going"
        android:textSize="16sp"
        android:background="@color/sender_color"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintHorizontal_bias=".9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeStamp_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/timeStamp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11:32"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="2dp"
        app:layout_constraintHorizontal_bias=".9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/message_tv"
        app:layout_constraintStart_toStartOf="@id/message_tv"
        app:layout_constraintEnd_toEndOf="@id/message_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>